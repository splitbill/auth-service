{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "types": ["reflect-metadata", "node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}